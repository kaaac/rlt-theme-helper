{
  "name": "rlt-theme-helper",
  "displayName": "RLT Theme Helper",
  "description": "Json Validator for Racing League Tools Themes",
  "version": "0.1.2",
  "publisher" : "Kaaac",
  "author" : "Kaaac",
  "icon" : "rlt_icon.png",
  "repository": {
    "type": "git",
    "url" : "https://github.com/kaaac/rlt-theme-helper.git"
  },
  "engines": {
    "vscode": "^1.88.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./extension.js",
  "contributes": {
    "commands": [{
      "command": "rlt-theme-helper.helloWorld",
      "title": "Hello World"
    }],
    "jsonValidation": [
      {
        "fileMatch" : [
          "components/**/*.json"
        ],
        "url" : "./json_schemas/schema_component.json",
        "icon" : "rlt_icon.svg"
      },
      {
        "fileMatch" : [
          "layer*.json"
        ],
        "url" : "./json_schemas/schema_layer.json",
        "icon" : "rlt_icon.svg"
      },
      {
        "fileMatch" : [
          "theme_description.json"
        ],
        "url" : "./json_schemas/theme_description.json"
      },
      {
        "fileMatch": "layout_description.json",
        "url" : "./json_schemas/layout_description.json",
        "icon" : "rlt_icon.svg"
      },
      {
        "fileMatch": "styles/*.json",
        "url" : "./json_schemas/blocks/style.json",
        "icon" : "rlt_icon.svg"
      },
      {
        "fileMatch": "localizations/*.json",
        "url" : "./json_schemas/localization.json",
        "icon" : "rlt_icon.svg"
      },
      {
        "fileMatch" : "public_properties.json",
        "url" : "./json_schemas/public_properties.json"
      },
      {
        "fileMatch": "global/*_vars.json",
        "url" : "./json_schemas/public_vars.json",
        "icon" : "rlt_icon.svg"
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.88.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "eslint": "^8.57.0",
    "typescript": "^5.3.3",
    "@vscode/test-cli": "^0.0.8",
    "@vscode/test-electron": "^2.3.9"
  }
}
