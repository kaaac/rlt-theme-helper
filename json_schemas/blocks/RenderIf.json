{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "oneOf": [
        {"type": "boolean"},
        {
          "type" : "string",
          "pattern" : "^{.*}$"
        },
        {
          "type" : "string",
          "pattern" : "^<.*>$"
        }
      ],
      "default" : false,
      "errorMessage" : "Incorrect type. Expected: \"boolean\", \"{Expression}\", \"<Variable>\"",
      "description": "Whether the block should be rendered\n\nPossible types: \"boolean\", \"{Expression}\", \"<Variable>\""
}