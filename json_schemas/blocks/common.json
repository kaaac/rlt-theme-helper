{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "BlockType":              { "$ref" : "BlockType.json" },
        "Name":                   { "$ref" : "Name.json" },
        "RenderIf":               { "$ref" : "RenderIf.json" },
        "Opacity":                { "$ref" : "Opacity.json" },
        "Width":                  { "$ref" : "Width.json" },
        "Height":                 { "$ref" : "Height.json" },
        "MaxWidth":               { "$ref" : "MaxWidth.json" },
        "MaxHeight":              { "$ref" : "MaxHeight.json" },
        "StretchWidth":           { "$ref" : "StretchWidth.json" },
        "StretchHeight":          { "$ref" : "StretchWidth.json"},
        "HorizontalAlignment":    { "$ref" : "HorizontalAlignment.json" },
        "VerticalAlignment":      { "$ref" : "VerticalAlignment.json" },
        "Padding":                { "$ref" : "Padding.json"},
        "Margin":                 { "$ref" : "Margin.json" },
        "MarginLeft":             { "$ref" : "Outer_Inner.json",
                                    "description": "Left margin of the block" },
        "MarginTop":              { "$ref" : "Outer_Inner.json",
                                    "description": "Top margin of the block" },
        "MarginRight":            { "$ref" : "Outer_Inner.json",
                                    "description": "Right margin of the block" },
        "MarginBottom":           { "$ref" : "Outer_Inner.json",
                                    "description": "Bottom margin of the block" },
        "PaddingLeft":            { "$ref" : "Outer_Inner.json",
                                    "description": "Left padding of the block" },
        "PaddingTop":             { "$ref" : "Outer_Inner.json",
                                    "description": "Top padding of the block" },
        "PaddingRight":           { "$ref" : "Outer_Inner.json",
                                    "description": "Right padding of the block" },
        "PaddingBottom":          { "$ref" : "Outer_Inner.json",
                                    "description": "Bottom padding of the block" },
        "Background":             { "$ref" : "../includes/color.json" },
        "BackgroundImage":        { "$ref" : "BackgroundImage.json"},
        "UseBackgroundCrop":      { "$ref" : "UseBackgroundCrop.json"},
        "BackgroundImageOpacity": { "$ref" : "BackgroundImageOpacity.json"},
        "GridRow":                { "$ref" : "GridRow.json"},
        "GridCol":                { "$ref" : "GridCol.json"},
        "Colorize":               { "$ref" : "Colorize.json"},
        "ColorizeBackground":     { "$ref" : "ColorizeBackground.json"},
        "Triggers":               { "$ref" : "Triggers.json"},
        "Source":                 { "$ref" : "Source.json"},
        "FontName":               { "$ref" : "FontName.json"},
        "FontSize":               { "$ref" : "FontSize.json"},
        "Foreground":             { "$ref" : "Foreground.json"},
        "Orientation":            { "$ref" : "Orientation.json"},
        "Spacing":                { "$ref" : "Spacing.json"},
        "Style" :                 { "$ref" : "Style.json"},
        "WidthPercent":           { "$ref" : "WidthPercent.json",
                                    "description": "Determines the percentage of the width of the parent block's available space. A value of 100 is equivalent to setting StretchWidth to true"},
        "HeightPercent":          { "$ref" : "WidthPercent.json",
                                    "description": "Determines the percentage of the height of the parent block's available space. A value of 100 is equivalent to setting StretchHeight to true"}
    }
}