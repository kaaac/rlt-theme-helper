{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "oneOf": [
        {
            "type": "string",
            "enum": ["Left", "Right", "Center"],
            "description": "Predefined horizontal alignment values"
        },
        {
            "type": "string",
            "pattern": "^<[^>]+>$",
            "description": "Variable placeholder in format <VariableName>"
        }
    ],
    "description": "Horizontal alignment of the block. Can be a predefined value (Left, Right, Center) or a variable placeholder like <HoriAlign>"
}