{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "if": {
      "properties": { "BlockType": { "const": "component" } }
    },
    "then": {
      "properties": {
        "ComponentOptions" : {
            "type" : "object",
            "properties" : {
                "ComponentName": {
                    "type": "string",
                    "description": "Name of the component"
                },
                "Vars" : {
                    "type": "object",
                    "additionalProperties": {
                      "oneOf": [
                        { "type": "string" },
                        { "type": "integer" }
                      ]
                    }
                }
            }
        }
      }
    }
  }