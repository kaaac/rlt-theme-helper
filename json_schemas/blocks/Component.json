{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "if": {
      "properties": { "BlockType": { "const": "component" } }
    },
    "then": {
      "properties": {
        "ComponentOptions" : {
            "type" : "object",
            "properties" : {
                "Component": {
                    "type": "string",
                    "description": "Name of the component"
                },
                "Vars" : { "$ref": "Vars.json"}
            }
        },
        "Component": {
          "type": "string",
          "description": "Name of the component"
        }
      }
    }
  }