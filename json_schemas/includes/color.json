{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "oneOf": [
        {
            "type": "string",
            "pattern": "^#?(?:[0-9a-fA-F]{2})?(?:[0-9a-fA-F]{6}|[0-9a-fA-F]{8})$",
            "description": "Hex color format: #RGB, #RRGGBB, #AARRGGBB, #RRGGBBAA"
        },
        {
            "type": "string",
            "pattern": "^\\d{1,3},\\s?\\d{1,3},\\s?\\d{1,3}(?:,\\s?\\d{1,3})?$",
            "description": "RGB or RGBA format: R,G,B or R,G,B,A"
        },
        {
            "type": "string",
            "description": "Single curly braces variable: {VariableName}",
            "pattern": "^\\{[a-zA-Z0-9._]+\\}$"
        },
        {
            "type": "string",
            "pattern": "^\\{\\{[^}]+\\}\\}$",
            "description": "Double curly braces variable: {{VariableName}}"
        },
        {
            "type": "string",
            "pattern": "^\\{\\{[^}]+\\}[^}]+\\}$",
            "description": "Mixed braces variable: {{VariableName}OtherPart}"
        },
        {
            "type": "string",
            "description": "Mixed braces variable: {VariableName{OtherPart}}",
            "pattern": "^{[^}]+\\{[^}]+\\}}$"
        },
        {
            "type": "string",
            "pattern": "^<[^>]+>$",
            "description": "Angle brackets variable: <VariableName>"
        }
    ],
    "description": "Color value in hex, numeric format, or defined by variable",
    "examples": ["#dddddd", "#ffdddddd", "255,255,255", "255,255,255,125", "{SomeVariable}", "{Item.Color}", "{{Variable}}", "{{Variable}SomeVariable}", "<someVariable>"]
}