      "anyOf": [
        {"properties": { "BlockType": { "const": "stack" } }},
        {"properties": { "BlockType": { "const": "dock" } }},
        {"properties": { "BlockType": { "const": "grid" } }},
        {"properties": { "BlockType": { "const": "canvas" } }}
