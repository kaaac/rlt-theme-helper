    "type": "object",
    "anyOf" : [
      {
        "if" : {
          "required": [ "RenderType"],
          "properties": { "RenderType": { "const": "DriverSeasonStatistics" } }
        },
        "then" : {
          "allOf" : [
            {"$ref" : "layout_description/properties.json"},
            {"$ref" : "layout_description/RenderDataType__DriverSeason.json"}
          ],
          "$comment" : "in ref is standard pack of properties",
          "required": [ "RenderType","RenderDataType"]
        }
      },
      {
        "if" : {
          "required": [ "RenderType"],
          "properties": { "RenderType": { "const": "DriverSessionStatistics" } }
        },
        "then" : {
          "allOf" : [
            {"$ref" : "layout_description/properties.json"},
            {"$ref" : "layout_description/RenderDataType__DriverSession.json"}
          ],
          "required": [ "RenderType","RenderDataType"]
        }
      },
      {
        "$ref": "layout_description/properties.json",
        "required": ["RenderType"],
        "additionalProperties": false
      }
    ],
    "required": ["RenderType"]
}