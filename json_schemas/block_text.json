{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "if": {
      "properties": { "BlockType": { "const": "text" } }
    },
    "then" : {
        "properties": {
            "TextOptions": {
              "type": "object",
              "properties": {
                "Text": {
                  "type": "string",
                  "description": "Text to display"
                },
                "FontName": {
                  "type": "string",
                  "description": "Name of the font (if empty, use value of the global variable 'FontNameDefault')"
                },
                "FontSize": {
                  "type": "integer",
                  "description": "Size of the font (if empty, use value of the global variable 'FontSizeDefault')"
                },
                "FontStyle": {
                  "type": "string",
                  "enum": ["Regular", "Bold", "Italic", "BoldItalic"],
                  "description": "Style of the font"
                },
                "Foreground": {
                  "type": "string",
                  "description": "Foreground color (if empty, use value of the global variable 'ForegroundDefault')"
                },
                "TextAlignment": {
                  "type": "string",
                  "enum": ["Start", "End", "Center"],
                  "description": "Text alignment"
                },
                "HorizontalAlignment": {
                  "type": "string",
                  "enum": ["Left", "Center", "Right"],
                  "description": "Horizontal alignment"
                },
                "VerticalAlignment": {
                  "type": "string",
                  "enum": ["Top", "Center", "Bottom"],
                  "description": "Vertical alignment"
                },
                "LineSpacing": {
                  "type": "integer",
                  "description": "Line spacing"
                },
                "Wrap": {
                  "type": "boolean",
                  "description": "Wrap text"
                },
                "ColorizeRating": {
                  "type": "object",
                  "properties": {
                    "IsEnabled": {
                      "type": "boolean",
                      "description": "Enable colorization based on rating value"
                    },
                    "Level": {
                      "type": "integer",
                      "minimum": 0,
                      "maximum": 100,
                      "description": "Rating level (0-100) to determine color"
                    },
                    "GradientStops": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "Color": {
                            "type": "string",
                            "description": "Color"
                          },
                          "Offset": {
                            "type": "integer",
                            "minimum": 0,
                            "maximum": 100,
                            "description": "Offset (0-100)"
                          }
                        },
                        "required": ["Color", "Offset"]
                      },
                      "description": "Gradient stop list for custom color assignment algorithm"
                    }
                  },
                  "required": ["IsEnabled", "Level"]
                }
              },
              "required": ["Text"]
            }
        }
    }
}